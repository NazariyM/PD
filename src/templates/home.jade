extends layouts/_layout
block content
  //begin main
  +b.MAIN.home.main
    +e.bg(style='background-image: url(img/bg/home-view_bg.jpg)')
    +e.side
      include components/_category
      //begin time-bar
      +b.time-bar.home__time-bar
        +e.BUTTON.btn.is-active(type='button')
          +icon('icon-sun', 'time-bar__icon')
        +e.BUTTON.btn(type='button')
          +icon('icon-moon', 'time-bar__icon')
      //end time-bar
  //end main